                            labInDoor.BackColor = System.Drawing.SystemColors.ControlLight;
                        }
                        break;

                    case IOLPDoor.Open:
                        {
                            labInDoor.Text = "InOpen";
                            labInDoor.BackColor = Color.Yellow;
                        }
                        break;

                    default:
                        {
                            labInDoor.Text = "InUnknown";
