        public IOLPDoor Ui_OutDoor
        {
            set
            {
                if (InvokeRequired)
                {
                    this.Invoke(new MethodInvoker(delegate() { Ui_OutDoor = value; }));
                    return;
                }
             
                switch (value)
                {
                    case IOLPDoor.Close:
                        {
                            txtBarcode.Enabled = false;
                            labOutDoor.Text = "OutClose";
                            labOutDoor.BackColor = Color.Yellow;

                            //if(Ui_Barcode != "" && Ui_Presence == true)
